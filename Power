class Solution {
    public double recPow(double x,long n){
        if(n==0) return 1;
        if((n&1)==0){
            return recPow(x*x,n/2);
        }
        else{
            return x * recPow(x,n-1);
        }
    }
    public double myPow(double x, int n) {
        long exp = n;
        if(n<0){
            return 1.0/recPow(x,-exp);
        }
        return recPow(x,exp);
    }
}
